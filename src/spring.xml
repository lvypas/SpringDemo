<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="triangle" class="org.lvypas.Triangle" autowire="byName">		
	</bean>

	
	<bean id="pointA" class="org.lvypas.Point">
		<qualifier value = "circleRelated"/>
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointB" class="org.lvypas.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="org.lvypas.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>
	
	<bean id="circle" class="org.lvypas.Circle">
		<!-- <property name="center" ref="pointA" /> -->		
	</bean>
	
	<context:annotation-config/>

</beans>